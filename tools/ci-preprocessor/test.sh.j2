#!/bin/bash
git clone https://github.com/stackabletech/{{ git_repo }}.git

{% for helm_repo in helm_repos %}helm repo add {{ helm_repo.id }} {{ helm_repo.url }}
{% endfor %}

(cd {{ git_repo }}/ && ./scripts/run_tests.sh {{ test_params }})
exit_code=$?

{% for operator in operator_logs %}./operator-logs.sh {{ operator }} > /target/{{ operator }}-operator.log
{% endfor %}

exit $exit_code
